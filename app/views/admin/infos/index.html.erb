<div class="col-md-12">
  <div class="group">
    <%= link_to("新增資訊", new_admin_info_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Ordinal</td>
        <td>Operation</td>
      </tr>
    </thead>
    <tbody>
      <% @infos.each do |info| %>
        <tr>
          <td><%= info.id %></td>
          <td><%= link_to(truncate(info.title, length: 15), info_path(info)) %></td>
          <td width="50%"><%= info.description %></td>
          <td><%= info.ordinal %></td>
          <td>
              <%= link_to("Edit", edit_admin_info_path(info), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", admin_info_path(info), class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>
